<div class="row">
  <div class="col-md-6">
    <div class="container video-wrapper">
      <%= video_tag url_for(@video.video), controls: true, class: 'user-video' %>
      <h3><%= @video.title %></h3>
    </div>
  </div>
</div>

<style>
  .video-container {
  margin-bottom: 20px;
  padding: 15px;
  background-color: #f8f9fa;
  }

  .user-video {
    width: 100%;
    height: auto;
    display: block;
  }

  .video-title {
    margin-top: 10px;
  }
</style>
